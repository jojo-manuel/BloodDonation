{
    "version": 2,
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "backend/api/index.js",
            "use": "@vercel/node"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/backend/api/index.js"
        },
        {
            "source": "/assets/(.*)",
            "destination": "/frontend/assets/$1"
        },
        {
            "source": "/vite.svg",
            "destination": "/frontend/vite.svg"
        },
        {
            "source": "/favicon.ico",
            "destination": "/frontend/favicon.ico"
        },
        {
            "source": "/((?!api|assets|favicon.ico|.*\\.).*)",
            "destination": "/frontend/index.html"
        }
    ]
}